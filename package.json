{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "scripts": {
    "start": "rw dev",
    "postgres:up": "docker-compose up",
    "postgres:down": "docker-compose down",
    "setupdev": "yarn rw prisma db push && yarn rw exec seed",
    "test": "yarn postgres:down && yarn postgres:up && yarn rw test"
  },
  "packageManager": "yarn@3.3.0"
}
